<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="field_title_text">
        <item name="android:gravity">center_vertical</item>
        <item name="android:textSize">@dimen/text_size_normal_text</item>
        <item name="android:textStyle">bold</item>
        <item name="android:layout_marginStart">@dimen/field_margin</item>
        <item name="android:layout_marginEnd">@dimen/field_margin</item>
    </style>
    <style name="field_normal_text">
        <item name="android:gravity">center_vertical</item>
        <item name="android:textSize">@dimen/text_size_normal_text</item>
        <item name="android:layout_marginStart">@dimen/field_margin</item>
        <item name="android:layout_marginEnd">@dimen/field_margin</item>
    </style>
</resources>
